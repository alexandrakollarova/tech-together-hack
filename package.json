{
  "name": "flask-react-boilerplate",
  "version": "0.1.0",
  "author": "Yale DH Lab",
  "license": "MIT",
  "description": "Minimal boilerplate for a Flask + React application",
  "main": "server/server.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/duhaime/react-boilerplate.git"
  },
  "scripts": {
    "start": "webpack-dev-server --port 7081 --history-api-fallback --mode=development",
    "build": "webpack --config webpack.config.js --mode=production",
    "compress": "webpack --config webpack.config.js --mode=production",
    "production": "npm run build && npm run serve",
    "serve": "FLASK_APP=pysrc/app.py flask run --port=7082",
    "lint-js": "eslint -c './src/config/.eslintrc.js' src/",
    "lint-py": "pylint server/app.py",
    "lint": "npm run lint-js && npm run lint-py",
    "jest": "jest",
    "test": "npm run build && npm run lint && npm run jest && pytest",
    "prepublish": "npm run build",
    "prepush": "npm run lint && npm run test:coverage",
    "prettier-watch": "onchange '**/*.js' '**/*.jsx' -- prettier --write {{changed}}",
    "report-coverage": "nyc report --reporter=lcov > coverage.lcov && codecov",
    "test:watch": "npm test -- --watch",
    "test:coverage": "nyc npm test",
    "analyze": "BUNDLE_ANALYZE=true ./node_modules/.bin/webpack --config webpack.config.prod.js -p"
  },
  "dependencies": {
    "@babel/core": "^7.5.5",
    "babel-polyfill": "^6.26.0",
    "cors": "^2.8.5",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-prettier": "^3.0.1",
    "flatted": "^2.0.0",
    "history": "^4.7.2",
    "isomorphic-fetch": "^2.2.1",
    "jest": "^24.9.0",
    "onchange": "^5.2.0",
    "prettier": "^1.16.4",
    "prop-types": "^15.6.0",
    "random-id": "0.0.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-router": "^5.0.1",
    "react-router-dom": "^5.1.2",
    "react-simple-chatbot": "^0.6.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-transform-arrow-functions": "^7.0.0",
    "@babel/plugin-transform-object-assign": "^7.2.0",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.0.0",
    "babel-loader": "^8.0.6",
    "babel-eslint": "^10.0.3",
    "babel-preset-react-hmre": "^1.1.1",
    "clean-webpack-plugin": "^3.0.0",
    "compression-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^5.0.3",
    "css-loader": "^3.1.0",
    "eslint": "^6.6.0",
    "eslint-plugin-react": "^7.16.0",
    "file-loader": "^4.1.0",
    "html-webpack-plugin": "^3.2.0",
    "json-loader": "^0.5.4",
    "jsx-loader": "^0.13.2",
    "lodash": "^4.17.15",
    "mini-css-extract-plugin": "^0.8.0",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "prop-types": "^15.5.10",
    "react-test-renderer": "^16.11.0",
    "style-loader": "^0.23.1",
    "webpack": "^4.36.1",
    "webpack-cli": "^3.3.6",
    "webpack-dev-server": "^3.7.2",
    "webpack-merge": "^4.1.0",
    "styled-components": "^4.1.3"
  },
  "peerDependencies": {
    "styled-components": "^4.0.0",
    "react": "^16.3.0",
    "react-dom": "^16.3.0"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ],
    "env": {
      "start": {
        "presets": [
          "@babel/env",
          "@babel/react"
        ]
      }
    }
  },
  "jest": {
    "testEnvironment": "node"
  }
}